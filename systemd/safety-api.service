[Unit]
Description=Safety Deployment API Service
After=network.target
Wants=network-online.target

[Service]
Type=simple
EnvironmentFile=/etc/safety-platform.env
WorkingDirectory=/
ExecStart=/usr/bin/env bash -lc 'cd "$PROJECT_ROOT" && "$PYTHON_BIN" -m uvicorn main:app --host 0.0.0.0 --port "${API_PORT:-8080}"'
Restart=always
RestartSec=5
MemoryMax=2G
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
