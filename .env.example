# Example environment configuration for the Safety Deployment Platform
ENVIRONMENT=production
PROJECT_ROOT=/opt/safety-platform
PYTHON_BIN=/usr/bin/python3
API_PORT=8080
QUEUE_POLL_INTERVAL=10
APP_SETTINGS_FILE=config/settings.toml
APP_LOG_DIR=logs
ALERT_LOG_PATH=logs/alerts.log

# Guardrail toggles
SAFETY_FINANCIAL_BLOCKLIST_ENABLED=1
SAFETY_CONSENT_REQUIRED=1
SAFETY_RATE_LIMIT_ENABLED=1
SAFETY_RATE_LIMIT_MAX_REQUESTS=5
SAFETY_RATE_LIMIT_WINDOW_SECONDS=60
SAFETY_OUTPUT_VALIDATION_ENABLED=1
SAFETY_BLOCKED_TERMS=advice,ssn,account number
FINANCIAL_BLOCKLIST=fraudster-001,synthetic-999
